{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "types": ["jest", "node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": false,
    "declaration": false,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": [
    "ts/**/*.ts"
  ]
}